<Window x:Class="SportMarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportMarket"
        mc:Ignorable="d"
        Title="Прокат спортивного инвентаря" Height="650" Width="1000"
        MaxHeight="650" MaxWidth="1000" MinHeight="650" MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383">
            <Image Source="/res/logo.png" Margin="200,0,0,0"
                   VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label Content="Прокат спортивного инвентаря"
                   VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        </Grid>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
